%h1 Admin::Users#index
%table.table
  %thead
    %tr
      %th Name
      %th Email
      %th Edit
      %th Destroy
  - @users.each do |user|
    %tbody
      %tr
        %td
          = user.name
        %td
          = user.email
        %td
          = link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-success'
        %td
          = link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

