%table.table
  %thead
    %tr
      %th
        - if search.present?
          = sort_link(search, :name)
        -else
          = "Name"
      %th
        - if search.present?
          = sort_link(search, :email)
        -else
          = "Email"
      %th Edit
      %th Destroy
  - items.each do |user|
    %tbody
      %tr
        %td
          = user.name
        %td
          = user.email
        %td
          = link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-success'
        %td
          = link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
